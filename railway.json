{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["nodejs", "pnpm"]
        },
        "pnpm:config": {
          "dependsOn": ["setup"],
          "cmds": [
            "pnpm config set @jstemplate:registry https://api.keygen.sh/v1/accounts/88de7a21-b541-48e5-8727-f992ebeb43fa/artifacts",
            "pnpm config set //api.keygen.sh/v1/accounts/88de7a21-b541-48e5-8727-f992ebeb43fa/artifacts/:_authToken=$NPM_TOKEN"
          ]
        },
        "install": {
          "dependsOn": ["setup", "pnpm:config"],
          "cmds": ["pnpm install"]
        },
        "build": {
          "dependsOn": ["install"],
          "cmds": ["pnpm build"]
        }
      },
      "start": {
        "cmd": ["pnpm -F backend start"]
      }
    }
  },
  "deploy": {
    "healthcheckPath": "/",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
