    },
    "company_count_placeholder": {
      "type": "string"
    },
    "resume_count_placeholder": {
      "type": "string"
    },
    "show_count": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images", "files", "videos", "audios"]
