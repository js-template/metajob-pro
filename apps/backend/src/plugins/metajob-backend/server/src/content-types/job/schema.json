{
  "kind": "collectionType",
  "collectionName": "job",
  "info": {
    "singularName": "job",
    "pluralName": "jobs",
    "displayName": "Job",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "startDate": {
      "type": "date",
      "required": true
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "description": {
      "type": "richtext"
    },
    "category": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::metajob-backend.job-category"
    },
    "type": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::metajob-backend.job-type"
    },
    "experience": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::metajob-backend.experience-level"
    },
    "vacancy": {
      "type": "integer"
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "company": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::metajob-backend.company"
    },
    "job_status": {
      "type": "enumeration",
      "enum": ["open", "closed", "draft"],
      "default": "open",
      "required": true
    },
    "is_featured": {
      "type": "boolean",
      "default": false
    },
    "endDate": {
      "type": "date",
      "required": true
    },
    "owner": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "skills": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "plugin::metajob-backend.skill"
    },
    "applications": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "plugin::metajob-backend.applied-job",
      "inversedBy": "job"
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    }
  }
}
