{
  "kind": "collectionType",
  "collectionName": "company",
  "info": {
    "singularName": "company",
    "pluralName": "companies",
    "displayName": "Company",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "default": "Company"
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "owner": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user",
      "required": true
    },
    "tagline": {
      "type": "string"
    },
    "email": {
      "type": "string"
    },
    "phone": {
      "type": "string"
    },
    "industry": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::metajob-backend.job-category",
      "required": true
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images", "files", "videos", "audios"]
    },
    "company_size": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::metajob-backend.company-size",
      "required": true
    },
    "revenue": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::metajob-backend.revenue"
    },
    "avg_salary": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::metajob-backend.avg-salary",
      "required": true
    },
    "social_links": {
      "type": "component",
      "repeatable": true,
      "component": "shared.social-medias"
    },
    "website": {
      "type": "string"
    },
    "about": {
      "type": "richtext",
      "default": "Company Details Here"
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    }
  }
}
