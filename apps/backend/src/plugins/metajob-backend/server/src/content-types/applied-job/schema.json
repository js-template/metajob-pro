{
  "kind": "collectionType",
  "collectionName": "applied_jobs",
  "info": {
    "singularName": "applied-job",
    "pluralName": "applied-jobs",
    "displayName": "Applied Job",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "owner": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user",
      "required": true
    },
    "job": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "plugin::metajob-backend.job",
      "mappedBy": "applications",
      "required": true
    },
    "apply_status": {
      "type": "enumeration",
      "enum": ["Shortlisted", "Selected", "Pending", "Rejected"],
      "default": "Pending"
    },
    "cover_letter": {
      "type": "richtext",
      "default": "Cover Letter Here",
      "required": true
    }
  }
}
