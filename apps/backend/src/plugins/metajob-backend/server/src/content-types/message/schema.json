{
  "kind": "collectionType",
  "collectionName": "messages",
  "info": {
    "singularName": "message",
    "pluralName": "messages",
    "displayName": "Messages",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "sender": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user",
      "required": true
    },
    "receiver": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user",
      "required": true
    },
    "message": {
      "type": "richtext",
      "required": true,
      "default": "Message Here"
    },
    "medias": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images", "files", "videos", "audios"]
    },
    "read": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "send_notification": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "chat_session": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::metajob-backend.chat",
      "required": true
    }
  }
}
